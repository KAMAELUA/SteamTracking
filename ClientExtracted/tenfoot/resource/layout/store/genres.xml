<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/store/store.css" />
	</styles>
	
	<StoreGenres defaultfocus="GenreGrid" class="Stackable">
		<Panel id="DetailsBackground">
			<Panel id="BGOverlay" class="BGOverlayInvisible"/>
		</Panel>
		<Panel id="Loading">
		</Panel>
		<Panel id="Loaded" selectionposboundary="vertical">
			<Panel class="TitleRow">
				<Label id="GenreTitle" text="#Store_GenreTitle" />
			</Panel>
			<Grid id="GenreGrid" scrolldirection="horizontal" verticalcount="3" horizontalcount="4" selectionpos="0,0" tabindex="auto" />
		</Panel>
	</StoreGenres>
</root>
