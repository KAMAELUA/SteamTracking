<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/login.css" />
	</styles>

	<LoginProgress defaultfocus="Cancel" tabindex="auto" selectionpos="auto">
		<Panel class="LoginThrobber" />
		<Label class="ProgressLabel" text="#Login_Connecting" />
		<Label class="ProgressLabel Progress" text="#Login_UpdatingPlatform" />
		<Panel id="Wait" class="Wait"/>

		<ProgressBar id="Progress" class="Progress"/>
		<Button id="Cancel" tabindex="auto" selectionpos="auto">
			<Label text="#UI_Cancel" />
		</Button>
		<Panel />
	</LoginProgress>

</root>
