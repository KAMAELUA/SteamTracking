<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
	</styles>

	<SettingsPanel_About class="SettingsSection" defaultfocus="SettingsRemoteControl_Enable" tabindex="auto" selectionpos="auto" >
		<!-- top header panel -->
		<Panel class="SettingsHeader">
			<Label class="SettingsHeaderLegend" text="#SettingsRemoteControl_Title" />
		</Panel>

		<!-- main panel -->
		<Panel class="SettingsContent SettingsCenterContentWide" >
			<Panel class="FlowDown" >
				<Label class="Settings" text="#SettingsRemoteControl_Text"/>

				<ToggleButton class="CheckBox" id="SettingsRemoteControl_Enable" text="#SettingsRemoteControl_Enable" onactivate="ToggleRemoteControl()" />

				<Panel class="SettingsRemoteControl_DevicesHeader" >
					<Label text="#SettingsRemoteControl_Item" class="SettingsRemoteControl_ColumnItem" />
					<Label text="#SettingsRemoteControl_Name" class="SettingsRemoteControl_ColumnName" />
					<Label text="#SettingsRemoteControl_Access" class="SettingsRemoteControl_ColumnAccess" />
					<Label text="#SettingsRemoteControl_Time" class="SettingsRemoteControl_ColumnTime" />
				</Panel>
				
				<Panel id="SettingsRemoteControl_List" class="SettingsRemoteControl_List" >
					<!-- instances of SettingsRemoteControl_ListEntry will be programmatically added here -->
				</Panel>
			</Panel>
			

		</Panel>
		
	
		
	
	</SettingsPanel_About>

</root>
